@import "../../../style/skin.wxss";

.main {
	padding: 0
}

.list {
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 20rpx 30rpx 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	overflow: hidden;
}

.list .item {
	padding: 22rpx 22rpx 40rpx;
	display: flex;
	border-radius: 14rpx;
	margin-bottom: 20rpx;
	position: relative;
	background-color: #fff;
	overflow: hidden;
	flex-direction: column;
	position: relative;
}

.list .item .mark-status {
	position: absolute;
	top: 0;
	right: 0;
	font-size: 22rpx;
	padding: 10rpx 20rpx;
	background-color: #f2f2f2;
	border-top-right-radius: 10rpx;
	border-bottom-left-radius: 20rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	z-index: 9;
}

.list .item .mark-my {
	position: absolute;
	bottom: 10rpx;
	right: 10rpx;
	font-size: 24rpx;
	z-index: 9;
	color: #999;
	opacity: .5;
}

.list .item .line-title {
	width: 100%;
	display: flex;
	align-items: center;
	margin-bottom: 40rpx;
}

.list .item .line-title .left {
	font-size: 36rpx;
	font-weight: bold;
	position: relative;
}


.list .item .line-title .left .price {
	font-size: 24rpx;
	top: 5rpx;
	position: absolute;
	color: var(--red);
	opacity: .7;
}

.list .item .line-title .right {
	font-size: 22rpx;
	color: #999;
	margin-left: 40rpx;
}

.list .item .line2 {
	width: 100%;
	display: flex;
	margin-bottom: 20rpx;
}

.list .item .line2 .left {
	border-radius: 10rpx;
	margin-right: 20rpx;
	width: 120rpx;
	height: 120rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
	background-color: #f8f8f8;
}

.list .item .line2 .left>image {
	width: 80rpx;
	height: 80rpx;

}

.list .item .line2 .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	padding: 6rpx 0;
}


.list .item .line2 .right .t1 {
	font-size: 26rpx;
	color: var(--projectCompareColor);
}

.list .item .line2 .right .t2 {
	font-size: 22rpx;
	color: #aaa;
	margin-top: 10rpx;
}


.list .oprt {
	width: 100%;
	display: flex;
	justify-content: flex-end;
	padding: 5rpx 0;
	margin-top: -10rpx;
	margin-bottom: 50rpx;
}


.list .oprt>view {
	padding: 8rpx 20rpx;
	font-size: 24rpx;
	background-color: #f2f2f2;
	margin-right: 16rpx;
	border-radius: 8rpx;
}

.list .oprt>view:last-child {
	margin-right: 4rpx;
}

.list .oprt>view>text {
	margin-right: 6rpx;
}


.post {
	width: 100%;
	position: fixed;
	left: 30rpx;
	bottom: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	display: flex;
}

.post>view {
	z-index: 999;
	font-size: 35rpx;
	background-color: var(--projectColor);
	color: var(--projectCompareColor);
	padding: 16rpx 160rpx;
	border-radius: 40rpx;
}